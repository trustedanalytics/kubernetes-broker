{
  "kind": "ReplicationController",
  "apiVersion": "v1",
  "metadata": {
    "name": "$idx_and_short_serviceid-slave1",
    "labels": {
      "org": "$org",
      "space": "$space",
      "catalog_service_id": "$catalog_service_id",
      "catalog_plan_id": "$catalog_plan_id",
      "service_id": "$service_id",
      "idx_and_short_serviceid": "$idx_and_short_serviceid",
      "managed_by": "TAP"
    }
  },
  "spec": {
    "replicas": 1,
    "selector": {
      "service_id": "$service_id",
      "idx_and_short_serviceid": "$idx_and_short_serviceid"
    },
    "template": {
      "metadata": {
        "labels": {
          "service_id": "$service_id",
          "idx_and_short_serviceid": "$idx_and_short_serviceid",
          "managed_by": "TAP"
        }
      },
      "spec": {
        "volumes": null,
        "containers": [
          {
            "name": "k-mongodb30",
            "image": "frodenas/mongodb:3.0",
            "command": ["/scripts/run.sh", "--smallfiles", "--httpinterface"],
            "ports": [
              {
                "containerPort": 27017,
                "protocol": "TCP"
              },
              {
                "containerPort": 28017,
                "protocol": "TCP"
              }
            ],
            "env": [
              { "name": "MANAGED_BY", "value":"TAP" },
              { "name": "MONGODB_PASSWORD",   "value": "$random1" },
              { "name": "MONGODB_USERNAME",   "value": "$random2" },
              { "name": "MONGODB_DBNAME",   "value": "$random3" }
            ],
            "imagePullPolicy": "IfNotPresent"
          }
        ],
        "restartPolicy": "Always",
        "dnsPolicy": "ClusterFirst"
      }
    }
  }
}